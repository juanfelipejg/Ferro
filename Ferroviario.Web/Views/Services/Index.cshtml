@model IEnumerable<Ferroviario.Web.Data.Entities.ServiceEntity>

@{
    ViewData["Title"] = "Index";
}

<h2>Services</h2>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Services</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InitialHour)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InitialStation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FinalHour)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FinalStation)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InitialHour)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InitialStation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FinalHour)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FinalStation)
                                    </td>
                                    <td>
                                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="glyphicon glyphicon-trash"></i></a>
                                        }
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="glyphicon glyphicon-align-justify"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
